import matplotlib.pyplot as plt
import pandas as pd

data = {
    'Population': [25, 30, 22, 15],
    'City': ['New York', 'Los Angeles', 'Chicago', 'Kyiv']
}

df = pd.DataFrame(data)
print(df)

df.plot(kind='bar', x='City', y='Population')  # Use df.plot() for bar plots
plt.ylabel('Population')
plt.xlabel('City')
plt.title('City Populations')
plt.show()
